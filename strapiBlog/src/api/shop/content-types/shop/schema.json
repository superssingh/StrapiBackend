{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "Shop"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ProductName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "text",
      "required": true
    },
    "Detail": {
      "type": "richtext",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "ProductName"
    },
    "Price": {
      "type": "decimal",
      "required": true
    },
    "SalePrice": {
      "type": "decimal",
      "required": true
    },
    "Quantity": {
      "type": "integer",
      "required": true
    },
    "Images": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "Video": {
      "allowedTypes": [
        "videos"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
