{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "Email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "Photo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Bio": {
      "type": "richtext"
    },
    "Slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "Profession": {
      "type": "text",
      "required": true
    },
    "Posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post"
    },
    "Social": {
      "type": "json",
      "required": true
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "author"
    }
  }
}
